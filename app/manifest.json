{
    "manifest_version": 3,
    "name": "EthicalEye",
    "version": "3.0",
    "description": "Recognize dark patterns in online websites",
    "action": {
        "default_icon": "logo_1.png",
        "default_popup": "popup_navigation.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content_fixed.js"
            ],
            "css": [
                "css/insite.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "web_accessible_resources": [
        {
            "resources": ["results.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}